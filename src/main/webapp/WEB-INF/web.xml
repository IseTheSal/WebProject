<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>by.learning.web.controller.listener.SessionListener</listener-class>
    </listener>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <filter>
        <filter-name>CharacterSetFilter</filter-name>
        <filter-class>by.learning.web.controller.filter.CharacterSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterSetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>400</error-code>
        <location>/jsp/error/error400.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/error/error403.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/error500.jsp</location>
    </error-page>

    <filter>
        <filter-name>XSSAttackFilter</filter-name>
        <filter-class>by.learning.web.controller.filter.XSSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XSSAttackFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>RefreshFilter</filter-name>
        <filter-class>by.learning.web.controller.filter.RefreshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RefreshFilter</filter-name>
        <url-pattern>/jsp/cart.jsp</url-pattern>
        <url-pattern>/increaseCart.do</url-pattern>
        <url-pattern>/decreaseCart.do</url-pattern>
        <url-pattern>/removeFromCart.do</url-pattern>
        <url-pattern>/usePromocode.do</url-pattern>
        <url-pattern>/makeOrder.do</url-pattern>
        <url-pattern>/addToCart.do</url-pattern>
        <url-pattern>/jsp/main.jsp</url-pattern>
        <url-pattern>/game.do</url-pattern>
        <url-pattern>/jsp/profile.jsp</url-pattern>
        <url-pattern>/changeEmail.do</url-pattern>
        <url-pattern>/changePassword.do</url-pattern>
        <url-pattern>/findOrderHistory.do</url-pattern>
        <url-pattern>/jsp/registration.jsp</url-pattern>
        <url-pattern>/register.do</url-pattern>
        <url-pattern>/jsp/admin/adminMenu.jsp</url-pattern>
        <url-pattern>/createGame.do</url-pattern>
        <url-pattern>/addGameCode.do</url-pattern>
        <url-pattern>/createCoupon.do</url-pattern>
        <url-pattern>/editCoupon.do</url-pattern>
        <url-pattern>/deleteCoupon.do</url-pattern>
        <url-pattern>/editGame.do</url-pattern>
        <url-pattern>/addAdmin.do</url-pattern>
        <url-pattern>/changeEmail.do</url-pattern>

        <url-pattern>/editGame.do</url-pattern>
        <url-pattern>/jsp/admin/createGame.jsp</url-pattern>
        <url-pattern>/createGame.do</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>PageAccessFilter</filter-name>
        <filter-class>by.learning.web.controller.filter.PageAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageAccessFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>by.learning.web.controller.filter.CommandAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
</web-app>

